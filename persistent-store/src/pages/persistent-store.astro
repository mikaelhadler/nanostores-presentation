---
import Controller from '../components/Controller.svelte'
import { ReactComponent } from '../components/ReactComponent'
import VueComonent from '../components/VueComponent.vue'
import SvelteComponent from '../components/SvelteComponent.svelte'
---

<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Nanostores</title>
  </head>
  <body>
    <main class="max-w-4xl mx-auto px-4 py-12 space-y-8">
      <section>
        <Controller client:idle />
      </section>
      <div class="grid grid-cols-2 gap-8">
        <ReactComponent client:idle />
        <VueComonent client:idle />
        <SvelteComponent client:idle />
      </div>
    </main>
  </body>
</html>
